<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/fragment_home_tbl_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/red"
            app:tabIndicatorColor="@color/gray"
            app:tabIndicatorHeight="4dp"
            app:tabTextAppearance="@style/tab_style" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/fragment_home_vp_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fragment_home_tbl_tab_layout" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fragment_articles_fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/ic_add"
            android:tint="@color/red"
            app:backgroundTint="@color/white"
            app:borderWidth="0dp" />
    </RelativeLayout>
</layout>